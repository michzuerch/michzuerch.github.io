mixin card(title, subtitle, subsubtitle, image)
    .w-full.p-6.flex.flex-col.flex-grow.flex-shrink(class='md:w-1/3')
        .flex-1.bg-white.rounded-t.rounded-b-none.overflow-hidden.shadow-lg
            img.h-64.w-full.rounded-t.pb-6(src= image)
            .w-full.font-bold.text-xl.text-gray-900.px-6.mb-2= title

            .w-full.text-gray-600.text-xs.px-6.mb-1(class='md:text-sm')= subtitle
            .text-gray-800.font-serif.text-base.px-6.mb-5= subsubtitle
