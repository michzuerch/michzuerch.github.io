---
import Img from '../components/img.astro'

export interface Props {
  title: string
  description?: string
  coverSVG?: string
  coverImage?: string
  socialImage?: string
}

const { title, description, coverSVG, coverImage, socialImage } = Astro.props
---

<div class="relative mx-auto my-4 h-96 w-full max-w-screen-xl md:mb-0">
  <div
    class="absolute bottom-0 left-0 z-10 h-full w-full bg-gradient-to-t from-gray-700 xl:rounded-lg"
  >
  </div>
  <Img
    src={coverSVG || coverImage || socialImage}
    alt={title}
    class="absolute left-0 top-0 z-0 h-full w-full object-contain"
  />
  <div class="absolute bottom-0 left-0 z-20 p-4">
    <h2 class="text-4xl font-bold leading-tight text-white">{title}</h2>
    <h2 class="text-xl font-medium italic text-amber-300">{description}</h2>
    <slot />
  </div>
</div>
