---
import Container from '../shared/Container.astro'
import { Icon } from 'astro-icon/components'
---

<section class="relative mt-12 md:mt-16">
  <Container>
    <div
      class="mx-auto lg:mx-0 p-5 sm:p-6 py-6 sm:py-8 max-w-5xl rounded-3xl bg-box-bg border border-box-border shadow-lg shadow-box-shadow md:divide-x divide-box-border grid grid-cols-3 md:grid-cols-3 gap-4 sm:gap-8 md:gap-6 lg:gap-12"
    >
      <div>
        <div
          class="flex font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1"
        >
          <Icon name="mdi:github" />
          <div>michzuerch@gmail.com</div>
        </div>
      </div>

      <div>
        <div
          class="flex font-semibold text-base sm:text-2xl md:text-4xl text-heading-1"
        >
          <Icon name="mdi:phone" />
          <div>+49 178 660 86 39</div>
        </div>
      </div>

      <div>
        <div
          class="flex font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1"
        >
          <Icon name="mdi:github" />
          <div>
            <a href="https://www.github.com/michzuerch"
              >Github www.github.com/michzuerch</a
            >
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
