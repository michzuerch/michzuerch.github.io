---
import { Icon } from 'astro-icon'
import { NavigationLinks, Logo } from '../config'
import Search from '../components/search.astro'
import Theme from '../components/theme.astro'
import Img from '../components/img.astro'
---

<div class="relative h-16 w-full">
  <nav x-data="{ isOpen: false }" class="dark:bg-gray-800">
    <div
      class="fixed z-50 mx-auto w-full border-b-2 border-amber-300 bg-white px-2 dark:border-amber-600 dark:bg-gray-800 sm:px-6 lg:px-8"
    >
      <div class="relative flex h-16 items-center justify-between">
        <div class="absolute inset-y-0 left-0 flex items-center lg:hidden">
          <!-- Mobile menu button-->
          <button
            type="button"
            x-on:click="isOpen = !isOpen"
            class="inline-flex items-center justify-center rounded-md p-2 text-amber-600 hover:bg-amber-200 hover:text-pink-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-amber-300 dark:text-amber-300 dark:hover:bg-amber-800 dark:hover:text-pink-300 dark:focus:ring-amber-800"
            aria-controls="mobile-menu"
            aria-expanded="false"
          >
            <span class="sr-only">Open main menu</span>
            <Icon
              x-bind:class="{'hidden': isOpen, 'block': !isOpen }"
              class="block h-6 w-6"
              aria-hidden="true"
              pack="heroicons-outline"
              name="menu"
            />
            <Icon
              x-bind:class="{'block': isOpen, 'hidden': !isOpen }"
              class="hidden h-6 w-6"
              aria-hidden="true"
              pack="heroicons-outline"
              name="x"
            />
          </button>
        </div>
        <div
          class="flex flex-1 items-center justify-center lg:items-stretch lg:justify-start"
        >
          <div class="flex flex-shrink-0 items-center">
            <svg class="h-16 w-16 fill-current" viewBox="0 0 24 24">
              <path
                d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01l-1.97 5.67c-.07.21-.11.43-.11.66v7.16c0 .83.67 1.5 1.5 1.5S6 20.33 6 19.5V19h12v.5c0 .82.67 1.5 1.5 1.5c.82 0 1.5-.67 1.5-1.5v-7.16c0-.22-.04-.45-.11-.66l-1.97-5.67zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5s1.5.67 1.5 1.5s-.67 1.5-1.5 1.5zM5 11l1.27-3.82c.14-.4.52-.68.95-.68h9.56c.43 0 .81.28.95.68L19 11H5z"
              ></path>
            </svg>
          </div>
          <div class="hidden lg:ml-6 lg:block">
            <div class="flex space-x-4">
              {
                NavigationLinks.map(item => (
                  <a
                    href={import.meta.env.BASE_URL + item.href}
                    class={
                      (item.href.length > 0 &&
                      Astro.url.toString().includes(item.href)
                        ? 'bg-amber-200 text-pink-600 dark:bg-amber-800 dark:text-pink-300'
                        : 'text-amber-600 hover:bg-amber-200 hover:text-pink-600 dark:text-amber-200 dark:hover:bg-amber-800 dark:hover:text-pink-300') +
                      ' rounded-md px-2 py-2 text-lg font-medium'
                    }
                    aria-current={
                      item.href.length > 0 &&
                      Astro.url.toString().includes(item.href)
                        ? 'page'
                        : undefined
                    }
                  >
                    {item.name}
                  </a>
                ))
              }
            </div>
          </div>
        </div>
        <div
          class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0"
        >
          <Search />
          <Theme />

          <!-- Right nav -->
        </div>
      </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state. -->
    <div
      x-show="isOpen"
      x-cloak
      x-transition:enter="transition ease-out duration-100 transform"
      x-transition:enter-start="opacity-0 scale-95"
      x-transition:enter-end="opacity-100 scale-100"
      x-transition:leave="transition ease-in duration-75 transform"
      x-transition:leave-start="opacity-100 scale-100"
      x-transition:leave-end="opacity-0 scale-95"
      class="absolute inset-x-0 top-16 z-50"
      id="mobile-menu"
    >
      <div
        class="flex justify-center border-b-2 border-t-2 border-amber-300 bg-gray-100 px-4 py-2 font-semibold dark:border-amber-600 dark:bg-gray-800"
      >
        {
          NavigationLinks.map(item => (
            <a
              href={import.meta.env.BASE_URL + item.href}
              class:list={[
                item.href.length > 0 && Astro.url.toString().includes(item.href)
                  ? 'bg-amber-200 text-pink-600 dark:bg-amber-800 dark:text-pink-300'
                  : 'text-amber-600 hover:bg-amber-200 hover:text-pink-600 dark:text-amber-200 dark:hover:bg-amber-800 dark:hover:text-pink-300',
                ' px-2',
              ]}
              aria-current={
                item.href.length > 0 && Astro.url.toString().includes(item.href)
                  ? 'page'
                  : undefined
              }
            >
              {item.name}
            </a>
          ))
        }
      </div>
    </div>
  </nav>
</div>
