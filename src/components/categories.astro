---
export interface Props {
  categories?: string[]
}

const { categories } = Astro.props
---

{
  categories && (
    <div class="flex flex-row flex-wrap items-start gap-2 pb-2">
      {categories.map(category => (
        <a
          href={`${import.meta.env.BASE_URL}category/${encodeURIComponent(
            category
          )}/`}
          class="inline-block rounded bg-amber-600 px-3 py-1 text-xs font-medium uppercase tracking-tight text-white hover:bg-pink-600"
        >
          {category}
          <span class="sr-only">category</span>
        </a>
      ))}
    </div>
  )
}
