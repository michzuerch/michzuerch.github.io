---
import { Icon } from 'astro-icon'
import { SiteMetadata, Logo } from '../config'
import Img from '../components/img.astro'
---

<div class="h-24 lg:h-16"></div>
<footer class="text-gray-600 dark:text-gray-400">
  <div
    class="fixed inset-x-0 bottom-0 z-20 flex w-full flex-col items-center border-t-2 border-amber-300 bg-gray-100 px-4 py-1 dark:border-amber-600 dark:bg-gray-800 lg:flex-row lg:px-8 lg:py-4"
  >
    <span class="flex flex-none flex-row items-center">
      <a
        class="title-font dark:text:gray-100 flex items-center justify-center font-medium text-gray-900 lg:justify-start"
        href={import.meta.env.BASE_URL}
      >
        <svg class="h-12 w-12 fill-current" viewBox="0 0 24 24">
          <path
            d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01l-1.97 5.67c-.07.21-.11.43-.11.66v7.16c0 .83.67 1.5 1.5 1.5S6 20.33 6 19.5V19h12v.5c0 .82.67 1.5 1.5 1.5c.82 0 1.5-.67 1.5-1.5v-7.16c0-.22-.04-.45-.11-.66l-1.97-5.67zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5s1.5.67 1.5 1.5s-.67 1.5-1.5 1.5zM5 11l1.27-3.82c.14-.4.52-.68.95-.68h9.56c.43 0 .81.28.95.68L19 11H5z"
          ></path>
        </svg>
        <span class="sr-only">Logo</span>
      </a>
      <p
        class="ml-2 border-l-2 border-amber-300 py-1 pl-2 text-sm text-gray-600 dark:border-amber-600 dark:text-gray-300"
      >
        Â© {new Date().getFullYear()} MIT licence
        <a
          href="https://michzuerch.github.io"
          class="ml-1 text-amber-600 hover:text-pink-600 dark:text-amber-300 dark:hover:text-pink-300"
          rel="noopener noreferrer"
          target="_blank"
        >
          Michael Zuercher, Fullstack Developer
        </a>
      </p>
    </span>
    <span class="flex flex-none flex-row items-center">
      <p
        class="text-sm text-gray-600 dark:text-gray-300 lg:ml-4 lg:border-l-2 lg:border-amber-300 lg:py-1 lg:pl-4 dark:lg:border-amber-600"
      >
        <a
          href={import.meta.env.BASE_URL + 'privacy'}
          class="ml-1 text-amber-600 hover:text-pink-600 dark:text-amber-300 dark:hover:text-pink-300"
        >
          Privacy Policy
        </a>
      </p>
      <p
        class="ml-4 border-l-2 border-amber-300 py-1 pl-4 text-sm text-gray-600"
      >
        <a
          href={import.meta.env.BASE_URL + 'rss.xml'}
          class="ml-1 text-amber-600 hover:text-pink-600 dark:text-amber-300 dark:hover:text-pink-300"
          rel="noopener noreferrer"
          target="_blank"
        >
          RSS
        </a>
      </p>
      <p
        class="ml-4 border-l-2 border-amber-300 py-1 pl-4 text-sm text-gray-600 dark:text-gray-300"
      >
        <a
          href={import.meta.env.BASE_URL + 'sitemap-index.xml'}
          class="ml-1 text-amber-600 hover:text-pink-600 dark:text-amber-300 dark:hover:text-pink-300"
          rel="noopener noreferrer"
          target="_blank"
        >
          Sitemap
        </a>
      </p>
    </span>
    <span
      class="mt-2 inline-flex grow justify-center lg:ml-auto lg:mt-0 lg:justify-end"
    >
      {
        SiteMetadata.social.map(s =>
          s.link ? (
            <a
              href={s.link}
              class="ml-3 text-amber-600 hover:text-pink-600 dark:text-amber-300 dark:hover:text-pink-300"
              rel="noopener noreferrer"
              target="_blank"
            >
              <Icon pack="bi" name={s.icon} class=" h-5 w-5" />
              <span class="sr-only">{s.name}</span>
            </a>
          ) : (
            ''
          )
        )
      }
    </span>
  </div>
</footer>
