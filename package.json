{
  "name": "@michzuerch/michzuerch.github.io",
  "description": "Homepage Michael Zuercher",
  "version": "0.1.1",
  "private": true,
  "homepage": "https://github.com/michzuerch/michzuerch.github.io#readme",
  "author": {
    "name": "Michael Zuercher",
    "email": "michzuerch@gmail.com",
    "url": "https://github.io/michzuerch"
  },
  "repository": "github:michzuerch/michzuerch.github.io",
  "keywords": [
    "Homepage",
    "Michael Zuercher",
    "michzuerch.github.io",
    "Rust"
  ],
  "displayName": "Homepage Michael Zuercher, type module",
  "type": "commonjs",
  "scripts": {
    "dev": "./node_modules/.bin/astro dev",
    "start": "./node_modules/.bin/astro dev",
    "build": "./node_modules/.bin/astro build",
    "clean": "./node_modules/.bin/rimraf dist .astro node_modules",
    "build:clean": "sudo rm -rf ./playwright-report/mobile-* && sudo rm -rf ./playwright-report/desktop-*",
    "build:docker": "podman build -t michzuerch-github-playwright:latest .",
    "test:docker": "podman run --name michzuerch-github-playwright --rm -v $(pwd)/playwright-report:/app/playwright-report -p 9323:9323 --network host privaterautomarkt8-playwright:latest",
    "test": "LOCAL_TEST=1 npx playwright test",
    "test:snapshots": "LOCAL_TEST=1 npx playwright test --update-snapshots",
    "test:lighthouse": "npx lighthouse http://localhost:3000/ --output html --output-path lighthouse-result.html view",
    "preview": "./node_modules/.bin/astro preview",
    "astro": "./node_modules/.bin/astro",
    "format": "./node_modules/.bin/prettier -w .",
    "lint:eslint": "./node_modules/.bin/eslint . --ext .js,.ts,.astro",
    "subfont": "./node_modules/.bin/subfont -ir --no-fallbacks --silent --root dist",
    "updates": "./node_modules/.bin/npm-check-updates",
    "upgrade": "./node_modules/.bin/npm-check-updates -u"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.0.3",
    "astro": "^4.0.3",
    "tailwindcss": "^3.3.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-plugin-astro": "^0.30.0",
    "npm-check-updates": "^16.14.11",
    "playwright": "^1.40.1",
    "prettier": "3.1.0",
    "prettier-plugin-astro": "^0.12.2",
    "prettier-plugin-tailwindcss": "^0.5.9"
  }
}
